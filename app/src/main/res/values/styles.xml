<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>
    </style>

    <style name="AppTheme.PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/text_light_blue</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/text_light_blue</item>
        <item name="android:textColorTertiary">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchViewStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:editTextColor">@color/colorAccent</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">#ffffff</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="bgColor">#000000</item>
    </style>

    <!-- Estilo para el divisor de los detalles -->
    <style name="Divider">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider.Vertical.Content" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/text_light_blue</item>
    </style>

    <!-- Estilo para el click de los botones -->
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/md_white</item>
    </style>


    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>